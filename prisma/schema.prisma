generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Patient {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  appointments  Appointment[]
  prescriptions Prescription[]
}

model Appointment {
  id            Int      @id @default(autoincrement())
  provider      String
  startDateTime DateTime
  repeat        String
  patientId     Int

  patient Patient @relation(fields: [patientId], references: [id])
}

model Medication {
  id     Int    @id @default(autoincrement())
  name   String
  dosage String
}

model Prescription {
  id             Int      @id @default(autoincrement())
  medicationName String
  dosage          String
  quantity        Int
  refillDate      DateTime
  refillSchedule String
  patientId       Int

  patient Patient @relation(fields: [patientId], references: [id])
}
